<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueOceanDark">

    <include
        android:id="@+id/addItemTitlebar"
        layout="@layout/add_item_dialog_titlebar" />


    <TableLayout
        android:id="@+id/tableviewItemAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addItemTitlebar"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Account Name"
                android:layout_marginRight="10dip"
                android:textColor="@color/WhiteSmoke" />

            <EditText
                android:id="@+id/appItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="8"
                android:inputType="text"
                android:textColor="@color/WhiteSmoke" />

        </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="Password"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/WhiteSmoke" />

                <EditText
                    android:id="@+id/appItemPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="8"
                    android:inputType="textPassword"
                    android:textColor="@color/WhiteSmoke" />
            </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableviewItemAdd"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="40dip"
        android:text="Insert application/account name and application password"/>


</RelativeLayout>