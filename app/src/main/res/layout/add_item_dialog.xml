<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueOceanDark">

    <include
        android:id="@+id/addItemTitlebar"
        layout="@layout/add_item_dialog_titlebar" />


    <TableLayout
        android:id="@+id/tableviewItemAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addItemTitlebar"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Account Name"
                android:layout_marginRight="10dip"
                android:textColor="@color/WhiteSmoke" />

            <EditText
                android:id="@+id/accountItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="8"
                android:inputType="text"
                android:textColor="@color/WhiteSmoke" />

        </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="Password"
                    android:layout_marginRight="10dip"
                    android:textColor="@color/WhiteSmoke" />

                <EditText
                    android:id="@+id/accountItemPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="8"
                    android:inputType="textPassword"
                    android:textColor="@color/WhiteSmoke" />
            </TableRow>
    </TableLayout>


    <EditText
        android:id="@+id/detailsItemInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="5"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:layout_marginRight="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="40dip"
        android:hint="Other Details"
        android:textSize="14sp"
        android:layout_below="@+id/tableviewItemAdd"
        android:textColor="@color/WhiteSmoke" />


    <LinearLayout
        android:id="@+id/addDetailsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="40dip"
        android:layout_below="@+id/tableviewItemAdd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Other Details"
            android:layout_marginRight="10dip"
            android:layout_below="@+id/tableviewItemAdd"
            android:textColor="@color/WhiteSmoke" />

        <ImageButton
            android:id="@+id/addDetailsItem"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_below="@+id/tableviewItemAdd"
            android:background="@drawable/details_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dip"
            />

        </LinearLayout>

</RelativeLayout>